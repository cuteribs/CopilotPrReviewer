{
  "name": "copilot-pr-reviewer",
  "version": "0.2.0",
  "description": "AI-powered pull request code reviewer for Azure DevOps using GitHub Copilot SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "copilot-pr-reviewer": "dist/index.js"
  },
  "scripts": {
    "prebuild": "node ./scripts/prebuild.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build && npm test -- --run"
  },
  "keywords": [
    "code-review",
    "azure-devops",
    "copilot",
    "ai",
    "pr-review"
  ],
  "license": "MIT",
  "author": "Cuteribs",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuteribs/CopilotPrReviewer.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "dist",
    "resources",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@github/copilot-sdk": "0.1.23",
    "commander": "14.0.3",
    "diff": "8.0.3",
    "gpt-tokenizer": "3.4.0"
  },
  "devDependencies": {
    "@types/diff": "8.0.0",
    "@types/node": "25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  }
}
